using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace c05_Alegroso_Units
{
    class Program
    {

        struct Units {

            public double SciGrade;
            public double EngGrade;
            public double MathGrade;
            public double ComGrade;
            public double FilGrade;

        };

        static void Main(string[] args)
        {

            Units u1;

            Console.Write("Enter Grades for Science: ");
            u1.SciGrade = double.Parse(Console.ReadLine());

            Console.Write("Enter Grades for English: ");
            u1.EngGrade = double.Parse(Console.ReadLine());

            Console.Write("Enter Grades for Math: ");
            u1.MathGrade = double.Parse(Console.ReadLine());

            Console.Write("Enter Grades for Computer: ");
            u1.ComGrade = double.Parse(Console.ReadLine());

            Console.Write("Enter Grades for Filipino: ");
            u1.FilGrade = double.Parse(Console.ReadLine());

            // Output Average
            Console.WriteLine("Average " + CalcAverage(u1.SciGrade, u1.EngGrade, u1.MathGrade, u1.ComGrade, u1.FilGrade));

        }


        static double CalcAverage(double SciGrade, double EngGrade, double MathGrade, double ComGrade, double FilGrade)

        {


            return (SciGrade + EngGrade + MathGrade + ComGrade + FilGrade) / 5;


        }
    }
}
