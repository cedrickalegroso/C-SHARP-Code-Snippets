            int noi = 1, givennoi, givennum, totalsum = 0 ;


            Console.Write("Enter number of input: ");
            givennoi = int.Parse(Console.ReadLine());

            while (noi  <= givennoi)
            {

                Console.Write("\n Enter a number: ");
                givennum = int.Parse(Console.ReadLine());
                totalsum = givennum + totalsum;
                noi++;

            }

            Console.WriteLine(" The sum is:" + totalsum );
           
        }
