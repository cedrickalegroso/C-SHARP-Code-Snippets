            int number, i;
           

            Console.Write("Enter a number: ");

            number = int.Parse(Console.ReadLine());

            if (number % 2 == 0)
            {

                Console.Write("\n ");
                Console.Write(" You entered an Even number \n ");
                Console.Write("\n ");

                for (i = 2; i <= number; i=i+2)
                {
                    Console.Write(i + " ");
                }

            }
            else 
            {
                Console.Write("\n ");
                Console.Write(" You entered an Odd number \n ");
                Console.Write("\n ");
            }
            Console.Write("\n ");


